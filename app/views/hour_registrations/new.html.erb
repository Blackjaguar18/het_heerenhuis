<div class="main-div">
  <div class="section">
    <%= simple_form_for @hour_registration do |f| %>
      <div class="field">
        <div class="control">
          <%= f.input :start_time, input_html: { class: 'datepicker' }, wrapper: false, label_html: { class: 'label' } %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :end_time, input_html: { class: 'datepicker' }, wrapper: false, label_html: { class: 'label' } %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :small_break, input_html: { class: 'integer' }, wrapper: false, label_html: { class: 'label' } %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :big_break, input_html: { class: 'integer' }, wrapper: false, label_html: { class: 'label' } %>
        </div>
      </div>
      <%= f.button :submit, 'Sla uren op', class: "button is-primary" %>
    <% end %>
    <%= button_to "Cancel", { :action => "index" }, { class: "button", method: :get } %>
  </div>
</div>
